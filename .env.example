# DeepSeek (OpenAI compatible)
DEEPSEEK_API_KEY=your_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
ALLOW_NO_EMBEDDINGS=0
USE_LOCAL_EMBEDDINGS_FALLBACK=0
LOCAL_EMBEDDING_MODEL=bert-base-uncased
USE_ALL_CONTEXTS=1

# RAG settings
DEEPSEEK_EMBEDDING_MODEL=deepseek-embedding
CHUNK_MAX_CHARS=480
CHUNK_OVERLAP_CHARS=60
TOP_K=3
MAX_CONTEXT_CHARS=1400

# Request settings
REQUEST_TIMEOUT=60
CONNECT_TIMEOUT=10
MAX_RETRIES=2
RETRY_BACKOFF=0.6
